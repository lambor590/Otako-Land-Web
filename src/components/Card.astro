---
interface Props {
  title: string;
  description: string | (string | HTMLElement)[];
  color?: "purple" | "blue" | "green" | "pink" | "orange" | "red";
  footerText?: string;
}

const { title, description, color = "purple", footerText } = Astro.props;

const gradients = {
  purple: "from-purple-500 via-fuchsia-500 to-blue-500",
  blue: "from-blue-500 via-sky-500 to-cyan-500",
  green: "from-green-500 via-emerald-500 to-teal-500",
  pink: "from-pink-500 via-rose-500 to-red-500",
  orange: "from-orange-500 via-amber-500 to-yellow-500",
  red: "from-red-500 via-rose-500 to-pink-500",
};
---

<div class={`card group ${color} relative flex flex-col items-center text-center p-10 rounded-2xl bg-gray-800/30 backdrop-blur-lg shadow-lg border-2 border-gray-700/20 transition-all duration-300 hover:scale-[1.03] hover:-translate-y-2 hover:bg-gray-700/50 hover:shadow-2xl`}>
  <h3 class={`text-2xl font-bold mb-8 text-transparent bg-clip-text transition-all duration-300 group-hover:scale-110 group-hover:tracking-wide bg-linear-to-r ${gradients[color]}`}>
    {title}
  </h3>
  {
    Array.isArray(description) ? (
      <ul class="list-none p-0">
        {description.map((desc) => (
          <li class="mb-4 p-4 bg-gray-800 rounded-lg text-gray-300 transition-transform duration-200 text-center" set:html={desc} />
        ))}
      </ul>
    ) : (
      <p class="text-gray-300 leading-relaxed text-base opacity-85 transition-all duration-300 group-hover:opacity-100 group-hover:text-gray-100" set:html={description} />
    )
  }
  {footerText && <p class="mt-8 text-base text-gray-400">{footerText}</p>}
</div>

<style>
  .card:before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 1rem;
    z-index: -10;
    opacity: 0;
    background: linear-gradient(to bottom, var(--card-glow-color, transparent), transparent);
    transition: opacity 0.3s;
  }

  .card:hover:before {
    opacity: 1;
  }

  .purple { --card-glow-color: rgb(168 85 247 / 0.05); }
  .purple:hover { border-color: rgb(192 132 252 / 0.7); box-shadow: 0 10px 15px -3px rgb(168 85 247 / 0.2); }

  .blue { --card-glow-color: rgb(59 130 246 / 0.05); }
  .blue:hover { border-color: rgb(96 165 250 / 0.7); box-shadow: 0 10px 15px -3px rgb(59 130 246 / 0.2); }

  .green { --card-glow-color: rgb(34 197 94 / 0.05); }
  .green:hover { border-color: rgb(74 222 128 / 0.7); box-shadow: 0 10px 15px -3px rgb(34 197 94 / 0.2); }

  .pink { --card-glow-color: rgb(236 72 153 / 0.05); }
  .pink:hover { border-color: rgb(244 114 182 / 0.7); box-shadow: 0 10px 15px -3px rgb(236 72 153 / 0.2); }

  .orange { --card-glow-color: rgb(249 115 22 / 0.05); }
  .orange:hover { border-color: rgb(251 146 60 / 0.7); box-shadow: 0 10px 15px -3px rgb(249 115 22 / 0.2); }

  .red { --card-glow-color: rgb(239 68 68 / 0.05); }
  .red:hover { border-color: rgb(248 113 113 / 0.7); box-shadow: 0 10px 15px -3px rgb(239 68 68 / 0.2); }
</style>
