---
import { Icon } from "astro-icon/components";

interface Props {
  href: string | URL;
  text: string;
  icon?: string;
}

const { href, text, icon } = Astro.props;
---

<a
  href={href}
  class="relative inline-flex items-center justify-center rounded-xl text-base font-semibold text-white px-8 py-3.5 bg-linear-to-br from-purple-600 via-indigo-500 to-blue-500 transition-all duration-300 ease-out hover:scale-[1.02] hover:shadow-xl hover:shadow-purple-500/30 active:scale-[0.98] before:content-[''] before:absolute before:inset-0 before:rounded-xl before:bg-linear-to-br before:from-purple-400 before:via-indigo-400 before:to-blue-400 before:opacity-0 before:transition-opacity before:duration-300 hover:before:opacity-20 after:content-[''] after:absolute after:inset-0 after:rounded-xl after:border-2 after:border-white/30 after:opacity-0 after:transition-opacity after:duration-300 hover:after:opacity-100 group"
  aria-label={text}
>
  <span class="relative z-10">{text}</span>
  {icon && <Icon name={icon} class="relative z-10 w-5 h-5 ml-3" />}
</a>
